{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rules": {
    "no-console": [
      true,
      "log"
    ],
    "object-literal-sort-keys": false,
    "only-arrow-functions": false,
    "interface-name" : [true, "never-prefix"],
    "curly": [true, "ignore-same-line"]
  },
  "jsRules": {
    "object-literal-sort-keys": false,
    "curly": [true, "ignore-same-line"],
    "no-console": [
      true,
      "log"
    ]
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}
